---
// The Offer Section
---

<section class="w-full flex justify-center items-center mb-8">
  <div class="max-w-2xl w-full bg-white rounded-xl shadow-lg p-8 text-center">
    <h2 class="text-2xl font-bold text-blue-700 mb-4">
      üéÅ Free 30-Minute Codebase Health Check
    </h2>
    <p class="mb-4 text-gray-700">
      Get clear, actionable insights into your existing codebase. Optionally,
      include your GitHub repository link to make the most of your session.
    </p>
    <form class="mb-4" id="offer-form">
      <input
        type="text"
        placeholder="GitHub repo link (optional)"
        class="border rounded px-3 py-2 w-full mb-2"
      />
      <button
        type="submit"
        class="inline-block bg-blue-600 text-white font-semibold py-3 px-6 rounded-lg shadow hover:bg-blue-700 transition"
        >Book My Review Now</button
      >
    </form>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const calendlyUrl =
      "https://calendly.com/cuzzea-vmlsoft/30-min-code-review?";
    const form = document.getElementById("offer-form");
    if (form) {
      form.addEventListener("submit", function (e) {
        e.preventDefault();
        const input = form.querySelector("input");
        if (!input) {
          window.open(calendlyUrl, "_blank", "noopener");
          return;
        }
        const repo = input.value.trim();
        let url = calendlyUrl;
        if (repo) {
          url += `&a1=${encodeURIComponent(repo)}`;
        }
        window.open(url, "_blank", "noopener");
      });
    }
  });
</script>
