---
// Base layout for the landing page
import Footer from "../components/Footer.astro";
import Offer from "../components/Offer.astro";
import Testimonials from "../components/Testimonials.astro";
import Separator from "../components/Separator.astro";
import HeaderLinks from "../components/HeaderLinks.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VMLSoft Outsourcing</title>
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body
    class="bg-gradient-to-tr from-blue-50 via-white to-blue-100 text-gray-900 min-h-screen"
  >
    <header
      class="w-full bg-white shadow-lg rounded-b-2xl border-b border-blue-100"
    >
      <div
        class="max-w-5xl mx-auto px-6 py-7 flex items-center justify-between"
      >
        <div
          class="text-3xl font-extrabold text-blue-700 tracking-tight drop-shadow-sm"
        >
          <a
            data-goatcounter-click="nav_home"
            data-goatcounter-title="Navigation: Home"
            href="/"
            class="hover:underline">VMLSoft Outsourcing</a
          >
        </div>
        <nav>
          <HeaderLinks />
        </nav>
      </div>
    </header>
    <main
      class="max-w-5xl mx-auto px-4 py-10 flex flex-col items-center space-y-10"
    >
      <div
        class="w-full bg-white/90 rounded-2xl shadow-xl border border-blue-100 p-8"
        id="overview"
      >
        <slot name="overview" />
      </div>
      <Separator />
      <Offer />
      <Separator />
      <div
        class="w-full bg-white/90 rounded-2xl shadow-xl border border-blue-100 p-8"
        id="details"
      >
        <slot name="details" />
      </div>
      <Separator />
      <Testimonials />
      <Separator />
    </main>
    <Footer />
  </body>
</html>
