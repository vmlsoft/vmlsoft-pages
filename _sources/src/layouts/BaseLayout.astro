---
// Base layout for the landing page
import Footer from "../components/Footer.astro";
import Offer from "../components/Offer.astro";
import Testimonials from "../components/Testimonials.astro";
import Separator from "../components/Separator.astro";
import HeaderLinks from "../components/HeaderLinks.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VMLSoft Outsourcing</title>
    <meta
      name="description"
      content="VMLSoft provides expert software outsourcing and rapid MVP launch services in Denmark. Senior devs, zero headaches, fully remote-ready. Book your free 30-min code audit!"
    />
    <!-- Open Graph tags for social sharing -->
    <meta
      property="og:title"
      content="Expert Software Outsourcing in Denmark | VMLSoft"
    />
    <meta
      property="og:description"
      content="Get reliable software outsourcing from Danish-based senior developers. Launch your MVP faster and safer. Book your free code audit now!"
    />
    <meta property="og:url" content="https://vmlsoft.com" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://vmlsoft.com/favicon.svg" />
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "ProfessionalService",
        "name": "VMLSoft ApS",
        "url": "https://vmlsoft.com",
        "logo": "https://vmlsoft.com/favicon.svg",
        "sameAs": [
          "https://github.com/vmlsoft",
          "https://linkedin.com/company/vmlsoft"
        ],
        "contactPoint": {
          "@type": "ContactPoint",
          "email": "contact@vmlsoft.com",
          "contactType": "Customer Support",
          "areaServed": ["DK", "EU"],
          "availableLanguage": ["English", "Danish"]
        },
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "DK"
        }
      }
    </script>
    <link rel="icon" href="/favicon.svg" />
    <!-- TrustBox script -->
    <script
      type="text/javascript"
      src="//widget.trustpilot.com/bootstrap/v5/tp.widget.bootstrap.min.js"
      async></script>
    <!-- End TrustBox script -->
  </head>
  <body
    class="bg-gradient-to-tr from-blue-50 via-white to-blue-100 text-gray-900 min-h-screen"
  >
    <header
      class="w-full bg-white shadow-lg rounded-b-2xl border-b border-blue-100"
    >
      <div
        class="max-w-5xl mx-auto px-6 py-7 flex items-center justify-between"
      >
        <div
          class="text-3xl font-extrabold text-blue-700 tracking-tight drop-shadow-sm"
        >
          <a
            data-goatcounter-click="nav_home"
            data-goatcounter-title="Navigation: Home"
            href="/"
            class="hover:underline">VMLSoft Outsourcing</a
          >
        </div>
        <nav>
          <HeaderLinks />
        </nav>
      </div>
    </header>
    <main
      class="max-w-5xl mx-auto px-4 py-10 flex flex-col items-center space-y-10"
    >
      <div
        class="w-full bg-white/90 rounded-2xl shadow-xl border border-blue-100 p-8"
        id="overview"
      >
        <slot name="overview" />
      </div>
      <Separator />
      <Offer />
      <Separator />
      <div
        class="w-full bg-white/90 rounded-2xl shadow-xl border border-blue-100 p-8"
        id="details"
      >
        <slot name="details" />
      </div>
      <Separator />
      <Testimonials />
      <Separator />
    </main>
    <!-- TrustBox widget - Review Collector -->
    <div
      class="trustpilot-widget"
      data-locale="en-US"
      data-template-id="56278e9abfbbba0bdcd568bc"
      data-businessunit-id="6885da155c00453a2c175b80"
      data-style-height="52px"
      data-style-width="100%"
    >
      <a
        href="https://www.trustpilot.com/review/vmlsoft.com"
        target="_blank"
        rel="noopener">Trustpilot</a
      >
    </div>
    <Separator />
    <!-- End TrustBox widget -->
    <Footer />
  </body>
</html>
